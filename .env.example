# Environment Configuration
ENVIRONMENT=development

# Twilio Configuration
TWILIO_ACCOUNT_SID=twilio_account_sid
TWILIO_AUTH_TOKEN=twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# OpenAI Configuration
OPENAI_API_KEY=openai_api_key

# GoHighLevel Configuration
GHL_API_KEY=ghl_api_key
GHL_BASE_URL=https://services.leadconnectorhq.com
GHL_WEBHOOK_SECRET=webhook_secret

# AWS Configuration (for Polly TTS)
AWS_ACCESS_KEY_ID=aws_access_key
AWS_SECRET_ACCESS_KEY=aws_secret_key
AWS_REGION=us-east-1

# Database Configuration (dev - defaults to in-memory)
DATABASE_URL=postgresql://user:password@localhost:5432/voice_assistant

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8000
WEBHOOK_BASE_URL=https://your-domain.com

# Compliance Configuration
DNC_CHECK_ENABLED=true
PHI_ENCRYPTION_ENABLED=true
ESCALATION_PHONE=+1234567890

# AI Configuration
MAX_CONVERSATION_TURNS=10
CONVERSATION_TIMEOUT_SECONDS=300
STT_PROVIDER=openai  # options: openai, google, aws
TTS_PROVIDER=aws     # options: aws, elevenlabs, openai
